{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django 開発サーバ起動",
            "type": "debugpy",
            "request": "launch",
            "program": "${cwd}/manage.py",
            "args": [
                "runserver",
                "--settings",
                "config.settings.development"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "モデルの変更検出/マイグレーションコード生成",
            "type": "debugpy",
            "request": "launch",
            "program": "${cwd}/manage.py",
            "args": [
                "makemigrations",
                "--settings",
                "config.settings.development"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "マイグレーションをDBに適用",
            "type": "debugpy",
            "request": "launch",
            "program": "${cwd}/manage.py",
            "args": [
                "migrate",
                "--settings",
                "config.settings.development"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "マイグレーションの(非)適用リスト表示",
            "type": "debugpy",
            "request": "launch",
            "program": "${cwd}/manage.py",
            "args": [
                "showmigrations"
            ],
            "console": "integratedTerminal"
        },
    ]
}
